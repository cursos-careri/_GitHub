float x;
float easing = 0.1;
//-------------------------------------------------------------------------
void setup() {
  size(220, 120);
}
//-------------------------------------------------------------------------
void draw() {
  float targetX = mouseX;
  x += (targetX - x) * easing;  // Factor para agilizar actualizaciones.
  ellipse(x, 40, 12, 12);
  println(targetX + " : " + x);
}
